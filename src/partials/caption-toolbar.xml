<CaptionToolBar has="display">
	<Group class="undo-redo">
		<Options>
			<Tool symbol="icon-undo" click="undo" state="disabled"/>
			<Tool symbol="icon-redo" click="redo" state="disabled"/>
		</Options>
	</Group>
	<Group class="tools-left">
		<Options>
			<Tool symbol="icon-tool-move" click="select-tool" arg="move" title="M" state="disabled"/>
			<Tool symbol="icon-tool-resize" click="select-tool" arg="resize" title="R" state="disabled"/>
			<Tool symbol="icon-zoom-plus" click="select-tool" arg="zoom-in" title="Z" state="disabled"/>
			<Tool symbol="icon-zoom-minus" click="select-tool" arg="zoom-out" title="Shift+Z" state="disabled"/>
		</Options>
	</Group>
	<Group class="display">
		<Field>
			<span class="frameCurrent">0</span>
			<span class="framesTotal">0</span>
			<span class="fps" data-real="0">0</span>
		</Field>
	</Group>
	<Group class="tools-right">
		<Options>
			<Tool symbol="icon-rewind" click="start-frame" state="disabled"/>
			<Tool symbol="icon-prev" click="prev-frame" state="disabled"/>
			<Tool symbol="icon-play" click="play" state="disabled"/>
			<Tool symbol="icon-next" click="next-frame" state="disabled"/>
			<Tool symbol="icon-forward" click="end-frame" state="disabled"/>
		</Options>
	</Group>
	<Group class="empty"/>
</CaptionToolBar>